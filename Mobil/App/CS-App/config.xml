<?xml version='1.0' encoding='utf-8'?>
<widget id="cat.ccma.videosync.android" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CS-App</name>
    <description>
        A sample Apache Cordova application that uses the Cordova HbbTV Plugin to discover HbbTV Terminals, launch Applications on discovered Terminals and create App2App communication channels.
    </description>
    <author email="louay.bassbouss@fokus.fraunhofer.de" href="http://www.fokus.fraunhofer.de/usr/bassbouss">
        Louay Bassbouss
    </author>
    <content src="index.html" />
    <icon src="www/img/icon.png" />
    <plugin name="cordova-plugin-hbbtv" version="0.0.2" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="de.fhg.fokus.famium.hbbtv" spec="~0.0.1" />
    <plugin name="cat.ccma.wallClock" spec="../../plugin_UDPWallClock/UDPWallClock/" />
    <engine name="android" spec="^7.0.0" />
</widget>
